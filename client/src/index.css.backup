@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  body {
    @apply bg-gradient-to-br from-gray-50 to-gray-100 font-sans antialiased;
  }

  * {
    @apply transition-colors duration-200;
  }
}

@layer components {
  .btn-primary {
    @apply bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white font-medium py-2 px-4 rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl;
  }

  .btn-secondary {
    @apply bg-white hover:bg-gray-50 text-gray-800 font-medium py-2 px-4 rounded-lg transition-all duration-200 border border-gray-200 hover:border-gray-300 shadow-sm hover:shadow-md;
  }

  .card {
    @apply bg-white rounded-xl shadow-card p-6 backdrop-blur-sm bg-white/80 border border-white/20;
  }

  .card-hover {
    @apply card hover:shadow-card-hover transition-all duration-300 transform hover:scale-[1.02] hover:-translate-y-1;
  }

  .input-field {
    @apply w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-200;
  }

  .sidebar-item {
    @apply flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-purple-50 transition-all duration-200 hover:translate-x-1;
  }

  .sidebar-item-active {
    @apply sidebar-item bg-gradient-to-r from-purple-100 to-purple-50 text-purple-700 border-r-4 border-purple-500;
  }

  .gradient-bg {
    @apply bg-gradient-to-br from-purple-600 via-purple-700 to-blue-800;
  }

  .glass-effect {
    @apply backdrop-blur-md bg-white/10 border border-white/20;
  }

  .progress-bar {
    @apply h-2 bg-gray-200 rounded-full overflow-hidden;
  }

  .progress-fill {
    @apply h-full bg-gradient-to-r from-purple-500 to-blue-500 rounded-full transition-all duration-500 ease-out;
  }

  .stat-card {
    @apply bg-white rounded-xl p-6 shadow-card border border-gray-100 hover:shadow-card-hover transition-all duration-300 transform hover:scale-[1.02];
  }

  .animate-fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }

  .animate-slide-up {
    animation: slideUp 0.6s ease-out;
  }

  .animate-pulse-soft {
    animation: pulseSoft 2s infinite;
  }
}

@layer utilities {
  .text-gradient {
    @apply bg-gradient-to-r from-purple-600 via-purple-700 to-blue-600 bg-clip-text text-transparent;
  }

  .bg-gradient-primary {
    @apply bg-gradient-to-r from-purple-600 to-blue-600;
  }

  .shadow-glow {
    box-shadow: 0 0 20px rgba(147, 51, 234, 0.3);
  }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulseSoft {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}